<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.markvangenderen.cookiebreak">

    <application
        android:name="com.markvangenderen.cookiebreak.database.CookieBreakApplication"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher_full_cookie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_full_cookie_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookieBreak">
        <activity
            android:name="com.markvangenderen.cookiebreak.SettingsActivity"
            android:exported="true"
            android:parentActivityName="com.markvangenderen.cookiebreak.MainActivity">
        </activity>
        <activity
            android:name="com.markvangenderen.cookiebreak.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>