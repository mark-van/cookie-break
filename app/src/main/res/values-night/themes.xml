<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CookieBreak" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/silverware</item>
        <item name="colorPrimaryVariant">@color/dark_silver</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_brown</item>
        <item name="colorSecondaryVariant">@color/light_black</item>
        <item name="colorOnSecondary">@color/off_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_silver</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="cardBGColor">@color/light_black</item>
        <item name="cardSelectBackgroundColor">@color/bright_black</item>
        <item name="cardSelectedBackgroundColor">@color/dark_selected_red</item>
        <item name="android:windowBackground">@drawable/cookie_tiles_background</item>
    </style>
</resources>