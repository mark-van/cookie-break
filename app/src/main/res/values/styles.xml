<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cookie_button">
        <item name="android:background">@color/design_default_color_on_primary</item>
        <item name="android:fontFamily">@font/bungee</item>
    </style>

    <style name="dialog_theme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/silverware</item>
        <item name="android:textColor">@color/selected_red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/silverware</item>
        <item name="android:textColor">@color/selected_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/selected_red</item>
        <item name="colorSecondary">@color/selected_red</item>
        <item name="colorSurface">@color/dark_silver</item>
    </style>
</resources>